            <EditText
                android:id="@+id/be"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/outline"
                android:hint="B.E Aggregate"
                android:inputType="text"
                android:maxLength="2"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/puc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/outline"
                android:hint="12th/PUC Percentage"
                android:inputType="text"
                android:maxLength="2"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/sslc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/outline"
                android:hint="SSLC Percentage"
                android:inputType="text"
                android:maxLength="2"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/enter_backs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/outline"
                android:hint="Number of backlogs at present"
                android:inputType="text"
                android:maxLength="2"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/enter_interns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/outline"
                android:hint="Number of internships"
                android:inputType="text"
                android:maxLength="1"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <EditText
                android:id="@+id/enter_apti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/outline"
                android:hint="How good are you at aptitude [1 - 10]"
                android:inputType="text"
                android:maxLength="1"
                android:padding="15dp"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/det_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="SUBMIT"
                android:fontFamily="@font/actor"
                android:background="@drawable/btn_bg"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"/>
        </LinearLayout>


    </RelativeLayout>
</ScrollView>