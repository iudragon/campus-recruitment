<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".Prediction">

        <include
            android:id="@+id/pred_tool1"
            layout="@layout/custom_toolbar" />

        <TextView
            android:id="@+id/question11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pred_tool1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Question 1"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question11"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <TextView
                android:id="@+id/marks11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your SSLC Percentage"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/m11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline"
                android:gravity="center"
                android:hint="XX.X"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="%"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/question21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll11"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Question 2"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question21"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <TextView
                android:id="@+id/marks21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your PUC Percentage  "
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/m21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline"
                android:gravity="center"
                android:hint="XX.X"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="%"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/question31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll21"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Question 3"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll31"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question31"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <TextView
                android:id="@+id/marks31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Degree Aggregate"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/m31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/outline"
                android:gravity="center"
                android:hint="XX.X"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="%"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/question41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll31"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Question 4"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question41"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/marks41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How many Techical Languages do you know?"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/m41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/outline"
                android:hint="Ex : C , C++, HTML..."
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/question51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll41"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Question 5"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll51"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question51"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/marks51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number of Backlogs at present ??"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/m51"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/outline"
                android:inputType="number"
                android:maxLength="2"
                android:padding="10dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll51"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_background"
            android:text="Calculate Chances"
            android:textColor="@color/colorAccent" />


    </RelativeLayout>
</ScrollView>