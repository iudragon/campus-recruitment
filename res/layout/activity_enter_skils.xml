<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".EnterSkils">

    <AutoCompleteTextView
        android:id="@+id/skilltwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/outline"
        android:gravity="center"
        android:fontFamily="@font/actor"
        android:hint="Enter Skills"
        android:padding="15dp"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/actor"
        android:textColor="@color/colorPrimary"
        android:text="NOTE : We recommend you to select technical language in which you are perfect. You can select max of 6 technical languages."
        android:textSize="15sp" />


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/st"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:fontFamily="@font/actor"
                android:text="Selected Skills : "
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/s1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/outline"
                android:padding="15dp"
                android:fontFamily="@font/actor"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/s2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/outline"
                android:padding="15dp"
                android:fontFamily="@font/actor"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/s3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/outline"
                android:padding="15dp"
                android:fontFamily="@font/actor"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/s4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/outline"
                android:padding="15dp"
                android:fontFamily="@font/actor"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/s5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/outline"
                android:padding="15dp"
                android:fontFamily="@font/actor"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/s6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/outline"
                android:padding="15dp"
                android:fontFamily="@font/actor"
                android:textSize="16sp"
                android:layout_marginEnd="20dp"
                android:visibility="gone" />
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/btn_bg"
        android:text="DONE"
        android:fontFamily="@font/actor"
        android:textColor="@color/colorAccent"
        android:textStyle="bold" />

</LinearLayout>